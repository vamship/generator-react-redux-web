{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": [ "react" ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi": 2,
        "no-trailing-spaces": "error",
        "no-unused-vars": [ "error", { "args": "none" } ]
    },
    "env": {
        "browser": true
    }
}
